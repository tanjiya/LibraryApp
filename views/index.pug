extends ./layout/layout

block content

  .jumbotron.bg-light
    h1 Welcome to #{title}

  .row
    .col-4
      .jumbotron.bg-light.text-center
        h4 Total Books
        | !{bookCount}
    .col-4
      .jumbotron.bg-light.text-center
        h4 Copies of Book
        | !{bookInstanceCount}
    .col-4
      .jumbotron.bg-light.text-center
        h4 Available Copies
        | !{bookInstanceAvailableCount}
  .row
    .col-6
      .jumbotron.bg-light.text-center
        h4 Total Author
        | !{authorCount}
    .col-6
      .jumbotron.bg-light.text-center
        h4 Total Genres
        | !{genreCount}
